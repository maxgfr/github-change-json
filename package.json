{
  "name": "@maxgfr/action-change-json",
  "private": true,
  "description": "Github action which lets you to change a value from a json file (e.g. package.json)",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest --passWithNoTests",
    "all": "npm run build && npm run package && npm run lint && npm test",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maxgfr/actions-change-json.git"
  },
  "keywords": [
    "actions",
    "change",
    "package-json",
    "json"
  ],
  "author": "maxgfr",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.6.0",
    "@actions/exec": "1.1.0"
  },
  "devDependencies": {
    "@types/node": "17.0.21",
    "@typescript-eslint/parser": "5.14.0",
    "@vercel/ncc": "0.33.3",
    "eslint": "8.11.0",
    "eslint-plugin-github": "4.3.5",
    "eslint-plugin-jest": "26.1.1",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "js-yaml": "4.1.0",
    "lint-staged": "12.3.5",
    "prettier": "2.5.1",
    "ts-jest": "27.1.3",
    "typescript": "4.6.2"
  },
  "lint-staged": {
    "*.ts": "npm run format --fix"
  }
}
