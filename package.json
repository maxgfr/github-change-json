{
  "name": "@maxgfr/github-change-json",
  "private": true,
  "description": "Github action which lets you to change a value from a json file (e.g. package.json)",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build src/main.ts --source-map --license licenses.txt -o dist/",
    "test": "jest --passWithNoTests",
    "all": "pnpm run build && pnpm run package && pnpm run lint && pnpm test",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maxgfr/github-change-json.git"
  },
  "keywords": [
    "github",
    "actions",
    "change",
    "package-json",
    "json"
  ],
  "author": "maxgfr",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.0.0",
    "eslint-plugin-github": "^5.0.0",
    "eslint-plugin-jest": "^28.0.0",
    "globals": "^15.0.0",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.0.0"
  },
  "lint-staged": {
    "*.ts": "pnpm run format --fix"
  },
}
